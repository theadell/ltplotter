{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/PlotExpression",
    "definitions": {
        "PlotExpression": {
            "properties": {
                "expression": {
                    "type": "string",
                    "description": "PGF/Tikz Expression"
                },
                "domain": {
                    "type": "string",
                    "description": "Plot line Domain. i.e. -10:10"
                },
                "samples": {
                    "type": "integer",
                    "description": "number of samples per line"
                },
                "color": {
                    "type": "string",
                    "description": "line color"
                },
                "line_style": {
                    "type": "string"
                },
                "line_width": {
                    "type": "string",
                    "description": "line width in points i.e. 1.5pt"
                },
                "legend": {
                    "type": "string"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Plot Expression"
        }
    }
}